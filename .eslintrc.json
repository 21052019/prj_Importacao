{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": ["airbnb-base"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "no-restricted-syntax": "off",
    "global-require": "off",
    "no-undef": "off",
    "no-use-before-define": "off",
    "linebreak-style": "off",
    "class-methods-use-this": "off",
    "no-unused-vars": "warn"
  }
}
